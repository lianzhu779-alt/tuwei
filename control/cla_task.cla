// is triggered by software at the beginning
//
// Duty value
float duty;

#pragma DATA_SECTION(g_CLA_ClaToCpuPhaseData, "Cla1ToCpuMsgRAM");
volatile CLA_ClaToCpuPhaseData_t g_CLA_ClaToCpuPhaseData;


//-----------------------------------------------------------------------------
// Task 1 - Line voltage processing
// Description: Convert CPU-provided line voltages to phase voltages.
//-----------------------------------------------------------------------------
__attribute__((interrupt)) void Cla1Task1 ( void )
{
    // Uncomment this to debug the CLA while connected to the debugger
    __mdebugstop();

    float v_ab = g_CLA_CpuToClaAdcData.V_LL_AB;
    float v_bc = g_CLA_CpuToClaAdcData.V_LL_BC;
    float v_ca = g_CLA_CpuToClaAdcData.V_LL_CA;
    float va = 0.0f;
    float vb = 0.0f;
    float vc = 0.0f;

    line_to_phase_voltages(v_ab, v_bc, v_ca, &va, &vb, &vc);

    g_CLA_ClaToCpuPhaseData.V_Phase_A = va;
    g_CLA_ClaToCpuPhaseData.V_Phase_B = vb;
    g_CLA_ClaToCpuPhaseData.V_Phase_C = vc;

    EPWM_clearEventTriggerInterruptFlag(EPWM1_BASE);
}

//-----------------------------------------------------------------------------
// Task 2 - PWM control loop
// Description: PWM control logic can be implemented here.
//-----------------------------------------------------------------------------
__attribute__((interrupt))  void Cla1Task2 ( void )
{
    // Uncomment this to debug the CLA while connected to the debugger
    __mdebugstop();

    // Write to the COMPA register to realize a particular duty value
    EPWM_setCounterCompareValue(EPWM1_BASE, EPWM_COUNTER_COMPARE_A,
                                (uint16_t)(duty * EPWM1_PERIOD + 0.5f));

    // Update duty value and use the limiter
    duty += 0.1f;
    duty = (duty > 0.9f) ? 0.1f : duty;

    // Clear EPWM4 interrupt flag so that next interrupt can come in
    EPWM_clearEventTriggerInterruptFlag(EPWM4_BASE);
}

